# NOMAD Web Intake GUI - Production Docker Compose
# Generated by Ansible

version: '3.8'

services:
  {{ docker.container_name }}:
    image: {{ docker.image_name }}:{{ docker.image_tag }}
    container_name: {{ docker.container_name }}
    restart: unless-stopped
    volumes:
      - {{ paths.data }}:/app/data
    environment:
      - API_TOKEN=${NOMAD_WEB_API_TOKEN}
      - SECRET_KEY=${NOMAD_SECRET_KEY}
      - SHARE_EXPIRY_HOURS=${SHARE_EXPIRY_HOURS}
      - DEBUG=${DEBUG}
    healthcheck:
      test: ["CMD", "python", "-c", "import httpx; httpx.get('http://localhost:8080/health/live')"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    networks:
      - nomad-network
{% if not app.domain %}
    ports:
      - "8080:8080"
{% endif %}

{% if app.domain %}
  nomad-caddy:
    image: caddy:2-alpine
    container_name: nomad-caddy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
    depends_on:
      - {{ docker.container_name }}
    networks:
      - nomad-network

volumes:
  caddy_data:
  caddy_config:
{% endif %}

networks:
  nomad-network:
    driver: bridge
