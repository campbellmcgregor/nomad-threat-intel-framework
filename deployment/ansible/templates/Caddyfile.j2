# NOMAD Web Intake GUI - Caddy Configuration
# Generated by Ansible

{% if app.domain %}
{{ app.domain }} {
{% if caddy.email %}
    tls {{ caddy.email }}
{% endif %}

    # Reverse proxy to application
    reverse_proxy {{ docker.container_name }}:8080

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }

    # Logging
    log {
        output stdout
        format json
    }
}
{% else %}
# No domain configured - Caddy not used
# Application exposed directly on port 8080
{% endif %}
